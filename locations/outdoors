if month = 4 and weatherDay ! daystart:
	weatherDay = daystart
	temper = rand(2, 20)
	osadki = rand(0, 10)

	if osadki < painweather:
		if hour >= 7 and hour <= 20:
			$osadki = '天氣晴朗.'
		else
			$osadki = '天氣晴朗.'
		end
	else
		$osadki = '正在下雨.'
	end

	$weather = '外面雪融化了, 氣溫 <<temper>> ℃. <<$osadki>>'
end

