! WD: Variable not set needed for events in Village Gadyukino
if osadki < painweather:
	set sunWeather = 1
else
	set sunWeather = 0
end

if osadki >= painweather and umbrella = 0:
	if mop > 1:
		mop = 0
		'妳沒有帶傘, 雨水弄花了妳的妝容.'
	end

	if hapri = 1:
		hapri = 0

		if curly > 0:curly -= 1

		'妳沒有帶傘, 雨水的淋壞了妳的燙髮.'
	end
end

if isprok = 0 and isprokp = 0 and mesec > 0 and preg = 0:
	'<b><font color = red>鮮血從妳的雙腿之間流出, 弄髒了妳的衣服</font></b>'

	if clrbelo > 0 and tanga = 1:clrbelo -= 1 & tanga = 0 & '<b><font color="red">妳的內褲沾滿了血, 妳小心地把它脫下來丟掉.</font></b>'
	
	if clrbelo > 0:clrbelo -= 1

	sweat += 1
	manna -= 10
	willpower -= 10
	gs 'starenie'
end

