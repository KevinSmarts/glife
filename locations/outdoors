# outdoors
!translation to Chinese, by illume
if month = 1 and weatherDay ! daystart:
	weatherDay = daystart
	temper = rand(-30, 8)

	if temper <= 0:
		osadki = rand(0, 10)

		if osadki < painweather:
			$osadki = '天氣晴朗.'
		else
			$osadki = '天色明亮但飄著小雪.'
		end
	else
		osadki = rand(0, 10)

		if osadki < painweather:
			$osadki = '天氣晴朗, 積雪開始慢慢融化.'
		else
			$osadki = '天氣雨雪交雜, 落雪立刻融化成濕泥.'
		end
	end

	$weather = '外面下著雪, 氣溫 <<temper>> ℃. <<$osadki>>'
end

if month = 2 and weatherDay ! daystart:
	weatherDay = daystart
	temper = rand(-35, 8)

	if temper <= 0:
		osadki = rand(0, 10)

		if osadki < painweather:
			$osadki = '多雲而且刮起微風'
		else
			$osadki = '開始飄起雪.'
		end
	else
		osadki = rand(0, 10)

		if osadki < painweather:
			$osadki = '天氣晴朗, 積雪開始慢慢融化.'
		else
			$osadki = '空中飄著雪, 落雪立刻融化成濕泥.'
		end
	end

	$weather = '外面下著雪, 氣溫 <<temper>> ℃. <<$osadki>>'
end

