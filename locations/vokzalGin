# vokzalGin
$metka = $ARGS[0]
$loc = $CURLOC
CLOSE ALL
if sound = 0:PLAY 'sound/vokzal2.mp3',30
clr
frost = 0
poezddalsled = 0
gs 'vokdin'
gs 'vokdinvera'
gs 'vokmantoiev'
gs 'stat'
fcolor = rgb(0, 0, 0)
bcolor = rgb(255, 255, 255)
lcolor = rgb(106, 90, 205)


'<center><h4>Train station</h4></center>'
'<center><img src="images/qwest/alter/vokzal.jpg"></center>'
'In the center of the station is a waiting room and <a href="exec:dynamic $din_vokzalg_kassi">ticket office</a> with the departures board. In one wing is the <a href="exec:dynamic $din_vokzalg_kabinet">station managers office</a>, and in the other, the <a href="exec:minut += 1 & dynamic $din_vokzalg_toilet">toilets</a>.'
'Exit to the <a href="exec:GT ''vokzalperG'',''start''">Platform</a>'

if katalkinSexOnce = 1:'There is a small <a href="exec:minut += 5 & gt ''katalkin''">police</a> station inside the terminal.'

if podbros = 0:
	podrand = rand(0, 1)

	if money >= 1000 and hour >= 8 and hour <= 20 and podrand = 0:'Walking along the station you notice how a man falls thick <a href="exec:dynamic $din_vokzalg_podbros">purse</a>.'
end

act 'Leave':minut += 3 & gt 'vokzalG'

if vokzalVork >= 1:
	if cleZalDay ! daystart:
		act 'Mop the waiting room floor':
			cls
			cleZalDay = daystart
			minut += 60
			sweat += 1

			if vital < 15:vital += rand(0, 1)
			if stren < 15:stren += rand(0, 1)

			gs 'stat'
			'<center><img src="images/etogame/clener1.jpg"></center>'
			'You take some supplies from the store, poured water and detergent into a bucket and wash the floor in the waiting room.'

			act 'Leave':minut += 1 & gt 'vokzalGin'
		end
	end

	if cleMTDay ! daystart:
		act 'Mop the floor in the men''s toilet':
			cls
			cleMTDay = daystart
			minut += 30
			sweat += 1

			if vital < 15:vital += rand(0, 1)
			if stren < 15:stren += rand(0, 1)

			gs 'stat'
			'<center><img src="images/etogame/clener1.jpg"></center>'
			'You take some supplies from the store, poured water and detergent into a bucket and go to the men''s room.'
			dynamic $d_vok_man_toilet_event
			!!'You began to wash the floor in the men''s room, and then began to scrub toilets.'

			act 'Leave':minut += 1 & gt 'vokzalGin'
		end
	end

	if cleWTDay ! daystart:
		act 'Mop the floor in the women''s restroom':
			cls
			cleWTDay = daystart
			minut += 30
			sweat += 1

			if vital < 15:vital += rand(0, 1)
			if stren < 15:stren += rand(0, 1)

			gs 'stat'
			'<center><img src="images/etogame/clener1.jpg"></center>'
			'You take some supplies from the store, poured water and detergent into a bucket and scrub clean the ladies'' restroom before mopping the floor.'
			dynamic $d_vokzal_vera_talk

			act 'Leave':minut += 1 & gt 'vokzalGin'
		end
	end

	if cleMTDay = daystart and cleWTDay = daystart and cleZalDay = daystart and cleZarplatDay ! daystart:
		act 'Get salary':
			cls
			cleZarplatDay = daystart
			vokzalVork += 1
			money += 250
			minut += 3
			gs 'stat'
			'You go to the cashier and get your money.'

			act 'Leave':minut += 1 & gt 'vokzalGin'
		end
	end
end

if hour = 11 and minut = 0:
	poezddalsled = 1
	'The platform comes long-distance trains.'
elseif hour = 11 and minut > 0 and minut < 30:
	poezddalsled = 1
	'At the platform stands distance trains.'
elseif hour = 11 and minut = 30:
	poezddalsled = 1
	'Platform serving long-distance trains.'
elseif hour = 18 and minut = 0:
	poezddalsled = 1
	'The platform comes long-distance trains.'
elseif hour = 18 and minut > 0 and minut < 30:
	poezddalsled = 1
	'At the platform stands distance trains.'
elseif hour = 18 and minut = 30:
	poezddalsled = 1
	'Platform serving long-distance trains.'
end

if poezddalsled = 1:
	'Platform fussy run hucksters vtyuhivat their goods train passengers. On the part of all this fuss watches Police.'

	if tovarL > 0:
		act 'Sell your goods to passengers.':gt 'vokzaltorg'
	end
end

